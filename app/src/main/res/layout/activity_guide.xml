<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:src="@drawable/button_back2" />

        <TextView
            android:id="@+id/menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_"
            android:text="@string/guidance"
            android:textColor="@color/my_light_primary"
            android:textSize="22dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Featured Tips Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured Tips:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#707070"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rinse Food Containers:\n\ Remember to rinse food containers before recycling to prevent contamination."
            android:textColor="#707070"
            android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Caps and Lids:\n\ Remove caps and lids from plastic bottles before recycling to ensure they can be properly processed."
            android:textColor="#707070"
            android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Break Down Cardboard Boxes:\n\ Break down cardboard boxes before recycling to save space and make them easier to process."
            android:textColor="#707070"
            android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Local Guidelines:\n\ Check local recycling guidelines to ensure you're recycling correctly for your area."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avoid Tanglers:\n\ Avoid putting tanglers like hoses or wires in your recycling bin, as they can cause issues at recycling facilities."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

            <!-- Materials Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Materials:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#707070"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plastic:\nEnsure plastic containers are clean and dry before recycling.\nCheck the recycling number on plastic items to determine if they're accepted in your area."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metal:\nRecycle metal cans, such as aluminum and steel cans, after rinsing them.\nConsider scrapping larger metal items like appliances or car parts at a metal recycling facility."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White Glass:\nRecycle clear or white glass bottles and jars, removing any lids or caps.\nAvoid mixing white glass with other colored glass to maintain purity for recycling."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brown Glass:\nRecycle brown or amber glass bottles and jars separately from other glass colors.\nRinse containers and remove any labels before recycling."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardboard:\nFlatten cardboard boxes to save space and make them easier to recycle.\nRemove any plastic tape or packaging from cardboard before recycling."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paper:\nRecycle paper products such as newspapers, magazines, office paper, and cardboard.\nShred sensitive documents before recycling to protect your personal information."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery:\nRecycle household batteries at designated collection points or retailers that accept them.\nConsider using rechargeable batteries to reduce waste and environmental impact."
                android:textColor="#707070"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
