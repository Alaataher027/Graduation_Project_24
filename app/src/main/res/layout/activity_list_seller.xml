<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.listActivitySeller.ListComponents.SellerListActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/top_bar_rec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="42dp"
            android:padding="7dp"
            android:layout_height="42dp"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:src="@drawable/button_back2" />


        <TextView
            android:id="@+id/menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunitobold"
            android:text="@string/menu"
            android:textColor="@color/my_light_primary"
            android:textSize="25dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <!-- Button 1 -->
            <Button

                android:id="@+id/profile_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F6F5"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTintMode="src_atop"
                android:drawableLeft="@drawable/profile_list_ic"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/profile"
                android:textColor="#898A89"
                android:textSize="20dp" />

            <!-- Button 2 -->
            <Button
                android:id="@+id/saved_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F6F5"
                android:backgroundTintMode="src_atop"
                android:drawableLeft="@drawable/save_list_ic"
                android:fontFamily="@font/poppins_medium"

                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/saved_posts"
                android:textColor="#898A89"
                android:textSize="20dp" />

            <!-- Button 3 -->
            <Button
                android:id="@+id/privacy_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F6F5"
                android:backgroundTintMode="src_atop"
                android:drawableLeft="@drawable/privacy_list_ic"
                android:fontFamily="@font/poppins_medium"

                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/privacy"
                android:textColor="#898A89"
                android:textSize="20dp" />

            <!-- Button 4 -->
            <Button
                android:id="@+id/aboutus_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F6F5"
                android:backgroundTintMode="src_atop"
                android:drawableLeft="@drawable/about_us_ic"
                android:paddingTop="15dp"
                android:fontFamily="@font/poppins_medium"

                android:paddingBottom="15dp"
                android:text="@string/about_us"
                android:textColor="#898A89"
                android:textSize="20dp" />

            <!-- Button 5 -->
            <Button
                android:id="@+id/settings_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F6F5"
                android:backgroundTintMode="src_atop"
                android:drawableLeft="@drawable/setting_list_ic"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/poppins_medium"

                android:text="@string/settings"
                android:textColor="#898A89"
                android:textSize="20dp" />

            <!-- Button 6 -->
            <Button
                android:id="@+id/guid_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F6F5"
                android:backgroundTintMode="src_atop"
                android:drawableLeft="@drawable/sign_ic"
                android:fontFamily="@font/poppins_medium"

                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/guidance"
                android:textColor="#898A89"
                android:textSize="20dp" />

<!--            <Button-->
<!--                android:id="@+id/material_btn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_margin="8dp"-->
<!--                android:backgroundTint="#F5F6F5"-->
<!--                android:backgroundTintMode="src_atop"-->
<!--                android:drawableLeft="@drawable/materials_ic"-->
<!--                android:paddingTop="15dp"-->
<!--                android:fontFamily="@font/poppins_medium"-->

<!--                android:paddingBottom="15dp"-->
<!--                android:text="@string/material"-->
<!--                android:textColor="#898A89"-->
<!--                android:textSize="20dp" />-->

            <Button
                android:id="@+id/tech_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F6F5"
                android:backgroundTintMode="src_atop"
                android:drawableLeft="@drawable/tech_ic"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/technical_support"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#898A89"
                android:textSize="20dp" />

<!--            <Button-->
<!--                android:id="@+id/order_btn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_margin="8dp"-->
<!--                android:backgroundTint="#F5F6F5"-->
<!--                android:backgroundTintMode="src_atop"-->
<!--                android:fontFamily="@font/poppins_medium"-->
<!--                android:drawableLeft="@drawable/order_ic"-->
<!--                android:paddingTop="15dp"-->
<!--                android:paddingBottom="15dp"-->
<!--                android:text="@string/orders"-->
<!--                android:textColor="#898A89"-->
<!--                android:textSize="20dp" />-->
            <!-- Button 7 -->
            <Button
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:backgroundTint="#F5F6F5"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTintMode="src_atop"
                android:drawableLeft="@drawable/log_out_ic"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/log_out"
                android:textColor="#898A89"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>