<?xml version="1.0" encoding="utf-8"?>
<!-- nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.graduationproject.ui.mainActivity.fragment.chatFragment.ChatFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_chat">
        <action
            android:id="@+id/action_profileFragment_to_editProfileActivity"
            app:destination="@id/editProfileActivity" />
    </fragment>

    <activity
        android:id="@+id/editProfileActivity"
        app:destination="@id/editProfileActivity"
        android:label="EditProfileActivity"
        tools:layout="@layout/activity_edit_profile_customer" />

</navigation>